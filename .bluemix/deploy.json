{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Message Hub Data Processing with OpenWhisk Toolchain Deployment to Bluemix",
    "description": "IBM Cloud Function reference architecture template with IBM Cloud Function toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "deploy-region": {
            "description": "Deploy to this Bluemix Region",
            "type": "string"
        },
        "deploy-org": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "cloud-functions-api-endpoint": {
            "description": "IBM Cloud Functions API endpoint",
            "type": "string"
        },
        "cloud-functions-api-key": {
            "description": "IBM Cloud Functions API key: copy the API key from https://console.ng.bluemix.net/openwhisk/learn/cli",
            "type": "password"
        },
        "message-hub-api-key": {
            "description": "Message Hub name, copy from Bluemix console Message Hub instance credentials",
            "type": "string"
        },
        "message-hub-user": {
            "description": "Message Hub name, copy from Bluemix console Message Hub instance credentials",
            "type": "string"
        },
        "message-hub-rest-url": {
            "description": "Message Hub REST URL, copy from Message Hub console",
            "type": "password"
        },
        "message-hub-admin-url": {
            "description": "Message Hub Admin URL, copy from Message Hub console",
            "type": "string"
        },
        "message-hub-instance-name": {
            "description": "Message Hub service instance name, copy from Bluemix console",
            "type": "string"
        },
        "message-hub-src-topic": {
            "description": "Source topic URL, copy from Message Hub manage console",
            "type": "string"
        },
        "message-hub-out-topic": {
            "description": "Destination topic URL, copy from Message Hub manage console",
            "type": "string"
        }
    },
    "required": [
        "deploy-region",
        "deploy-org",
        "deploy-space",
        "cloud-functions-api-key",
        "cloud-functions-api-endpoint",
        "message-hub-api-key",
        "message-hub-user",
        "message-hub-password",
        "message-hub-rest-url",
        "message-hub-admin-url",
        "message-hub-instance-name",
        "message-hub-src-topic",
        "message-hub-out-topic"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "IBM Cloud Functions API Endpoint",
            "key": "cloud-functions-api-endpoint"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "IBM Cloud Functions Auth Key",
            "key": "cloud-functions-api-key"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Message Hub API Key",
            "key": "message-hub-api-key"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Message Hub User",
            "key": "message-hub-user"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Message Hub Password",
            "key": "message-hub-password"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Message Hub REST URL",
            "key": "message-hub-rest-url"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Message Hub Admin URL",
            "key": "message-hub-admin-url"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Message Hub Instance Name",
            "key": "message-hub-instance-name"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Message Hub Source Topic",
            "key": "message-hub-src-topic"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Message Hub Destination Topic",
            "key": "message-hub-out-topic"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Deploy to"
                },
                {
                    "type": "select",
                    "key": "deploy-region"
                },
                {
                    "type": "select",
                    "key": "deploy-org"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}
